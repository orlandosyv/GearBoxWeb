@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
            <input asp-for="Id" hidden />  
                @* this line is required when we need a new ID or when updating the row *@   
            <div class="border p-3 mt-6">
                
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow" rows="3"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @* <div class="form-floating py-2 col-12">
                <input asp-for="Description" class="form-control border-0 shadow" />
                <label asp-for="Description" class="ms-2"></label>
                </div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                @* Own Properties from GearBox *@

                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductDiscount" class="form-control border-0 shadow" />
                    <label asp-for="ProductDiscount" class="ms-2"></label>
                    <span asp-validation-for="ProductDiscount" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CostOfProduct" class="form-control border-0 shadow" />
                    <label asp-for="CostOfProduct" class="ms-2"></label>
                    <span asp-validation-for="CostOfProduct" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Weight" class="form-control border-0 shadow" />
                    <label asp-for="Weight" class="ms-2"></label>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                
                <div class="row mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary form-control">Update Product</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-danger form-control">
                            Back to list
                        </a>
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}