@model Category

<form method="post">
    <input asp-for="Id" hidden />   
   
    <div class="border p-3 mt-6">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
       
        <div class="mb-3 row p-1">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" disabled class="form-control" rows="2"></textarea>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-danger form-control">
                    Back to list
                </a>
            </div>
        </div>

    </div>
</form>
